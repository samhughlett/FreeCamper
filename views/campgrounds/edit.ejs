     <div class="form-group col-md-3">
      <label for="">Latitude</label>
      <input type="text" class="form-control" name="campground[long]"  value="<%=campground.long%>">
    </div>
  
  <div class="form-group col-md-3">
    <label for="inputAddress">Latitude</label>
    <input type="text" class="form-control" name="campground[lat]"  value="<%=campground.lat%>">
  </div>
  </div>
  <div class="form-group">
    <label for="inputAddress2">Image of Campground</label>
    <input type="text" class="form-control" name="campground[image]" value="<%=campground.image%>">
  </div>
  <div class="form-row">
      <div class="form-group col-md-4">
      <label for="firesAllowed">Fires Allowed?</label>
      <select class="form-control" name="campground[fire]">
        <option selected value="<%=campground.fire%>"></option>
        <option>Unknown</option>
        <option>Yes</option>
        <option>No</option>
      </select>
    </div>
    <div class="form-group col-md-4">
      <label for="runningWater">Running Water?</label>
      <select class="form-control"  name="campground[water]">
        <option selected value="<%=campground.water%>"></option>
        <option>Unknown</option>
        <option>Yes</option>
        <option>No</option>
      </select>
    </div>
   <div class="form-group col-md-4">
      <label for="publicRestrooms">Public Restrooms?</label>
      <select class="form-control"name="campground[restroom]">
